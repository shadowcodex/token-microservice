{
    "name": "token-microservice",
    "version": "0.0.0",
    "description": "A small microservice to handle token state management.",
    "main": "src/index.js",
    "scripts": {
        "dev": "./scripts/dev.sh",
        "start": "ts-node src/index.ts",
        "test": "./scripts/test.sh",
        "build": "npx tsc"
    },
    "author": "Shannon Duncan (ShadowCodex)",
    "license": "MIT",
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/jest": "^29.4.0",
        "@types/jsonwebtoken": "^9.0.1",
        "nodemon": "^2.0.21",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "jest": "^29.5.0",
        "jsonwebtoken": "^9.0.0",
        "jwks-rsa": "^3.0.1",
        "supertest": "^6.3.3",
        "vault-api": "^1.1.1"
